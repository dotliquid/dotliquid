</head>
<body>
    <div id="wrap">
        <div id="main" class="clearfix">
            <div id="header" class="clearfix">
                <div id="logo">
                    <img src="~/assets/img/logo_big.png" alt="DotLiquid Logo" title="DotLiquid Home" />
                </div>
                <ul id="header-menu">
                    <li><a class="@(Html.IsCurrentAction("index", "home") ? "active" : "")" href="~/">home</a></li>
                    <li><a href="https://www.nuget.org/packages/dotliquid">download</a></li>
                    <li><a href="@Url.Action("Index", "docs")">learn</a></li>
                </ul>
                <div id="try">
                    <a href="@Url.Action("Index", "TryOnline")">
                        <img src="~/assets/img/try_btn.png" alt="Try it online" title="Try it online" />
                    </a>
                </div>
