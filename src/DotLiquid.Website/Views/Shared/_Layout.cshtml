            </div>
            @RenderBody()
        </div>
    </div>
    <div id="footer">
        <div id="footer-content" class="clearfix">
            <div class="footer-col">
                <h5>Porting and Development</h5>
                <ul>
                    <li><a href="http://timjones.io">Tim Jones</a></li>
                </ul>
                @await Component.InvokeAsync("Contributors")
            </div>
            <div class="footer-col">
                <h5>Documentation</h5>
                <ul>
                    <li><a href="@Url.Action("gettingstarted", "docs")">Getting started</a></li>
                    <li><a href="@Url.Action("formatting", "docs")">Formatting</a></li>
                </ul>

                <h5>Support</h5>
                <ul>
                    <li><a href="https://gitter.im/dotliquid/dotliquid">Gitter</a></li>
                    <li><a href="https://github.com/dotliquid/dotliquid/issues">GitHub Issues</a></li>
                    <li><a href="https://groups.google.com/forum/#!forum/dotliquid">Google Group</a></li>
                    <li><a href="https://twitter.com/dotliquid">Twitter</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <h5>License</h5>
                <ul>
                    <li><a href="http://www.apache.org/licenses/LICENSE-2.0">Apache License, Version 2.0</a></li>
